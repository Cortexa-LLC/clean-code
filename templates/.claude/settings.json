{
  "description": "AI-Pack Framework Configuration for Claude Code",
  "permissions": {
    "allow": [
      "Write(*)",
      "Edit(*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(rm:*)",
      "Bash(git:*)",
      "Bash(npm:*)",
      "Bash(dotnet:*)",
      "Bash(jest:*)",
      "Bash(pytest:*)",
      "Bash(tsc:*)",
      "Bash(cargo:*)",
      "Bash(go:*)",
      "Bash(gradle:*)",
      "Bash(mvn:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "onSessionStart": {
      "command": "python3 .claude/hooks/session-start.py",
      "description": "Start ai-pack monitoring timers (coordination + watchdog)"
    },
    "onSessionEnd": {
      "command": "python3 .claude/hooks/session-end.py",
      "description": "Stop ai-pack monitoring timers"
    },
    "UserPromptSubmit": [
      {
        "description": "Enforce Orchestrator role boundaries (blocks execution tools)",
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/orchestrator-enforcement.py"
          }
        ]
      },
      {
        "description": "Enforce task packet gate before implementation work",
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/check-task-packet.py"
          }
        ]
      }
    ]
  }
}
