{
  "description": "AI-Pack Framework Configuration for Claude Code",
  "_comment_permissions": "defaultMode: accept enables auto-approval of all operations in 'allow' list. Auto-approved: Write, Edit, safe Bash commands, safe git operations (pull/fetch/status/diff/log/branch/checkout), build/test tools. Require approval: git commit/push/merge, rm, destructive operations.",
  "permissions": {
    "allow": [
      "Write(*)",
      "Edit(*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(pwd:*)",
      "Bash(echo:*)",
      "Bash(which:*)",
      "Bash(test:*)",
      "Bash(git pull:*)",
      "Bash(git fetch:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(cd:*)",
      "Bash(npm:*)",
      "Bash(dotnet:*)",
      "Bash(jest:*)",
      "Bash(pytest:*)",
      "Bash(tsc:*)",
      "Bash(cargo:*)",
      "Bash(go:*)",
      "Bash(gradle:*)",
      "Bash(mvn:*)",
      "Bash(node:*)",
      "Bash(python:*)",
      "Bash(python3:*)"
    ],
    "defaultMode": "accept"
  },
  "hooks": {
    "onSessionStart": {
      "command": "python3 .claude/hooks/session-start.py",
      "description": "Start ai-pack monitoring timers (coordination + watchdog)"
    },
    "onSessionEnd": {
      "command": "python3 .claude/hooks/session-end.py",
      "description": "Stop ai-pack monitoring timers"
    },
    "UserPromptSubmit": [
      {
        "description": "Enforce task packet gate before implementation work",
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/check-task-packet.py"
          }
        ]
      }
    ]
  }
}
